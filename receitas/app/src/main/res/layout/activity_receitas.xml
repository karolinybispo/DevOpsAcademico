<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFF5CC">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nova Receita"
        android:textSize="24sp"
        android:textColor="#B38F00"
        android:layout_gravity="center"
        android:marginBottom="16dp" />

    <EditText
        android:id="@+id/et_recipe_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome da Receita"
        android:background="@drawable/edit_text_background"
        android:padding="12dp" />

    <EditText
        android:id="@+id/et_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingredientes (separe por vÃ­rgula)"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:inputType="textMultiLine"
        android:minLines="4" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:backgroundTint="#FFD633"
        android:textColor="#5C3D00"
        android:layout_marginTop="16dp" />

</LinearLayout>
